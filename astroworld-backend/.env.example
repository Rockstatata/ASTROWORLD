# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/astroworld

# NASA API
NASA_API_KEY=your-nasa-api-key-here

# Email Configuration (Optional - for production)
# Leave these empty for development (emails will be printed to console)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=noreply@astroworld.dev

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Celery Configuration (Optional)
USE_CELERY=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis Cache
REDIS_URL=redis://localhost:6379/1